@model IEnumerable<PizzaApp.Models.ViewModels.StoreVM>


<h2>@ViewBag.Title</h2>

<p>
    <a asp-action="GoToPizzaMenu">Go to pizza menu</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
