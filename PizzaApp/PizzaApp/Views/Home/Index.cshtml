@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://www.lovemysalad.com/sites/default/files/styles/home_carousel_item_768/public/tuna_pizza.jpg?itok=HHMOYbRu" alt="ASP.NET" class="img-responsive images" />

            <div class="carousel-caption" role="option">
                <p>
                    Please login before you order your pizza<br />
                    <a asp-action="Index" asp-controller="User" class="btn btn-primary">Login</a>
                    <a asp-action="Register" asp-controller="User" class="btn btn-primary">Register</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://b.zmtcdn.com/data/pictures/9/35299/ba50a5176f9b3abf84a4b734543474a2.jpg" alt="Visual Studio" class="img-responsive images" />

            <div class="carousel-caption" role="option">
                <p>
                    Check what every pizza store offer<br />
                    <a asp-action="Index" asp-controller="User" class="btn btn-primary">Login</a>
                    <a asp-action="Register" asp-controller="User" class="btn btn-primary">Register</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://imagesvc.meredithcorp.io/v3/mm/image?q=85&c=sc&poi=face&w=3264&h=1709&url=https%3A%2F%2Fimages.media-allrecipes.com%2Fuserphotos%2F1347074.jpg" alt="Microsoft Azure" class="img-responsive images" />

            <div class="carousel-caption" role="option">
                <p>
                    Please login before you order your pizza<br />
                    <a asp-action="Index" asp-controller="User" class="btn btn-primary">Login</a>
                    <a asp-action="Register" asp-controller="User" class="btn btn-primary">Register</a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<style>
    .images{
        width:100%;
        height:500px;
    }
</style>
